#? (rospath <package-name>)
;; Return the full path to the ros package.
(de rospath (package-name)
  ;; TODO(reissb) -- 20120218 -- Can't figure out how to change the paths
  ;;   used by sh subprocesses invoked by (sys) function.
  (cond
    ((= "roscpp" package-name)
      "/opt/ros/electric/stacks/ros_comm/clients/cpp/roscpp")
    ((= "std_msgs" package-name)
      "/opt/ros/electric/stacks/ros_comm/messages/std_msgs")
    ((= "rostime" package-name)
      "/opt/ros/electric/stacks/ros_comm/utilities/rostime")
    ((= "rosconsole" package-name)
      "/opt/ros/electric/stacks/ros_comm/tools/rosconsole")
    ((= "cpp_common" package-name)
      "/opt/ros/electric/stacks/ros_comm/utilities/cpp_common")
    ((= "roscpp_serialization" package-name)
      "/opt/ros/electric/stacks/ros_comm/clients/cpp/roscpp_serialization")
    ((= "roscpp_traits" package-name)
      "/opt/ros/electric/stacks/ros_comm/clients/cpp/roscpp_traits")
    ((= "xmlrpcpp" package-name)
      "/opt/ros/electric/stacks/ros_comm/utilities/xmlrpcpp")
    ((= "geometry_msgs" package-name)
      "/opt/ros/electric/stacks/common_msgs/geometry_msgs")
    ((= "sensor_msgs" package-name)
      "/opt/ros/electric/stacks/common_msgs/sensor_msgs")
    ()
    )
  )
